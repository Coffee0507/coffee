package com.spring.data.jpa.example.Controller;

import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;
import org.springframework.web.bind.annotation.RestController;

import com.spring.data.jpa.example.Entity.UserInfo;
import com.spring.data.jpa.example.ServiceImpl.UserInfoServiceImpl;

@RestController
public class AjaxController {

	@Autowired
	private UserInfoServiceImpl userInfoServiceImpl;

	@RequestMapping(value="ajaxLogin")
	public String ajaxlogin() {
		String message = null;

		String name = req.getParameter("name");
		String password = req.getParameter("password");
		String userName = null;
		String userPassword = null;

		UserInfo userInfo = userInfoServiceImpl.login(name, password);

		if(userInfo != null) {
			userName = userInfo.getUserName();
			userPassword = userInfo.getPassword();
		}

		if(userName == null) {
			message = "入力内容が誤っています";
		}else if(userName.equals(name) && userPassword.equals(password)) {
			message = "ログインできます";
		}

		return message;
	}
}
