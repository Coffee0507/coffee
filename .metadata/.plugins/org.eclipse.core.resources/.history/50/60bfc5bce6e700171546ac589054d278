package com.internousdev.practice.action;

import java.util.Map;

import org.apache.struts2.interceptor.SessionAware;

import com.internousdev.practice.dao.BuyItemCompleteDAO;
import com.internousdev.practice.dao.BuyItemDAO;
import com.internousdev.practice.dto.BuyItemCompleteDTO;
import com.opensymphony.xwork2.ActionSupport;

public class BuyItemConfirmAction extends ActionSupport implements SessionAware {
	public Map<String, Object> session;
	private String result;
	private BuyItemCompleteDAO buyItemCompleteDAO = new BuyItemCompleteDAO();

	public String execute() throws SQLException{

		buyItemCompleteDAO.buyItemeInfo(
				session.get("id").toString(),
				session.get("buyItem_price").toString(),
				session.get("stock").toString(),
				session.get("login_user_id").toString(),
				session.get("pay").toStirng()
				)


	}

	@Override
	public void setSession(Map<String, Object> arg0) {
		this.session = session;
	}
}