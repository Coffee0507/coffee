package com.Action;

import java.sql.SQLException;
import java.util.Map;

import org.apache.struts2.interceptor.SessionAware;

import com.dao.AcountConfirmDAO;
import com.dto.AcountConfirmDTO;
import com.opensymphony.xwork2.ActionSupport;

public class AcountConfirmAction extends ActionSupport implements SessionAware {

	private String name1;
	private String name2;
	private String message;

	private String result;
	public Map<String, Object> session;
	private AcountConfirmDAO dao = new AcountConfirmDAO();
	private AcountConfirmDTO dto = new AcountConfirmDTO();

	public String execute() throws SQLException {
		result = ERROR;
		session.put("message", "error");

		if (!(name1.equals(""))) {
			result = ERROR;
		}

		if (!(name2.equals(""))) {
			result = ERROR;
		}

		switch (name1) {
		case "mituhashi":
			message = "よろしくお願いします(文章A)";
			session.put("message", message);
			break;
		case "abc":
			message = "";
			session.put("message", message);
			break;
		case "takahashi":
			message = "高橋(文章B)";
			session.put("message", message);
			break;
		default:
			message = "ようこそ(文章C)";
			session.put("message", message);
			break;
		}

		session.put("name1", name1);
		session.put("name2", name2);

		result = SUCCESS;
		return result;
	}

	return result;

	}

	public String getName1() {
		return name1;
	}

	public void setName1(String name1) {
		this.name1 = name1;
	}

	public String getName2() {
		return name2;
	}

	public void setName2(String name2) {
		this.name2 = name2;
	}

	public String getAge() {
		return age;
	}

	public void setAge(String age) {
		this.age = age;
	}

	public String getSex() {
		return sex;
	}

	public void setSex(String sex) {
		this.sex = sex;
	}

	@Override
	public void setSession(Map<String, Object> session) {
		this.session = session;
	}
}