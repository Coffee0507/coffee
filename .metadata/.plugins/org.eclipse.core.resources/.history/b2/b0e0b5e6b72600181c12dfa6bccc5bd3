 */
public class ScopeNameConstants {

  /** データソース関連 */
  /** selectのみ実行可能なユーザー */
  public static final String SCOPE_PG_OPERATOR = "pgOperator";
  /** 権限に制限のないユーザー */
  public static final String SCOPE_PG_MAINTAINER = "pgMaintainer";
  /** 追加：インターノウス */
  /** ここから */
  /** batch用更新情報取得 */
  public static final String SCOPE_PG_WORKING_TIME = "pgWorkingTime";

  /** 工数単価関連 */
  public static final String SCOPE_DEFAULT_UNIT_PRICE = "defaultUnitPrice";
  /** ここまで */

  /** メール関連 */
  /** ServiceSettingクラス（SMTPサーバ・ポート番号データをもつbeans) */
  public static final String SCOPE_SMTP_INFO = "smtp";
  /** メールアドレス */
  public static final String SCOPE_MAIL_ADDRESS = "mailAddress";

  /** ページ分割：PageBean */
  public static final String SCOPE_PAGE_BEAN = "page";
  /** ページ分割：表示上限件数 */
  public static final String SCOPE_PAGE_LIMIT = "pageLimit";
  /** ページ分割：データ取得開始位置 */
  // public static final String SCOPE_OFFSET = "offset";

  /** ログインユーザー情報 */
  public static final String SCOPE_LOGIN_USER_INFO = "account";

  /** フォーム画面の識別情報 */
  public static final String SCOPE_FORM_ID = "formID";
  /** 編集権限の識別 */
  public static final String SCOPE_CAN_EDIT = "canEdit";

  /** エラークラス */
  public static final String SCOPE_ERROR_CLASS = "error";

  /** 今日の日付 */
  public static final String SCOPE_DATE_TODAY = "dateToday";

  /** multipartformで送られるデータ */
  public static final String SCOPE_MULTIPART_DATA = "multipartData";
}
