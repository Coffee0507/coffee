package com.internousdev.sample.DAO;

import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.SQLException;

import com.internousdev.sample.DTO.BuyItemDTO;
import com.internousdev.sample.util.DBConnector;

public class BuyItemDAO {

	private DBConnector db = new DBConnector();
	private Connection con = db.getConnection();
	private BuyItemDTO buyItemDTO = new BuyItemDTO();
	private String sql = "select item_name,item_price,item_stock from item_info_transaction";

	public BuyItemDTO BuyItemInfo() throws SQLException {
		PreparedStatement ps = con.prepareStatement(sql);
		ResultSet rs = ps.executeQuery();

		buyItemDTO.setBuyItemName(rs.getString("item_name"));
		buyItemDTO.setBuyItemPrice(rs.getString("item_price"));
		buyItemDTO.setBuyItemStock(rs.getString("item_stock"));

		return buyItemDTO;
	}
}
