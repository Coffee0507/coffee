package com.internousdev.sample.Action;

import java.sql.SQLException;
import java.util.Map;

import org.apache.struts2.interceptor.SessionAware;

import com.internousdev.sample.DAO.BuyItemCompleteDAO;
import com.internousdev.sample.DTO.BuyItemCompleteDTO;
import com.opensymphony.xwork2.ActionSupport;

public class BuyItemConfirm extends ActionSupport implements SessionAware{
	public Map<String,Object>session;
	private BuyItemCompleteDAO buyItemCompleteDAO = new BuyItemCompleteDAO();
	private BuyItemCompleteDTO buyItemCompleteDTO = new BuyItemCompleteDTO();
	private String result;

	public String execute() throws SQLException{

		buyItemCompleteDAO.buyItemCompleteInfo(
				session.get("buyItem_name").toString(),
				session.get("buyItem_price").toString(),
				session.get("stock").toString(),
				session.get("pay").toString());


		result = SUCCESS;
		return result;

	}






	@Override
	public void setSession(Map<String, Object> session) {
		this.session = session;
	}
}
