package com.Action;

import java.sql.SQLException;
import java.util.Map;

import org.apache.struts2.interceptor.SessionAware;

import com.dao.AcountConfirmDAO;
import com.dto.AcountConfirmDTO;
import com.opensymphony.xwork2.ActionSupport;

public class AcountConfirm extends ActionSupport implements SessionAware {

	private String age;
	private String name1;
	private String name2;
	private String sex;
	private String message;

	private String result;
	public Map<String, Object> session;
	private AcountConfirmDAO dao = new AcountConfirmDAO();
	private AcountConfirmDTO dto = new AcountConfirmDTO();

	public String execute() throws SQLException {
		result = ERROR;
		session.put("message", "error");

		if (!(name1.equals(""))) {
			result = ERROR;
		}

		if (!(name2.equals(""))) {
			result = ERROR;
		}

		if (!(name1.equals(""))) {
			if (!(name2.equals(""))) {

				dto = dao.getAcountInfo(age, name1, name2, sex);
				session.put("info", dto);

				switch (name1) {
				case "mituhashi":
					message = "よろしくお願いします(文章A)";
					session.put("message", message);
					break;
				case "abc":
					message = "";
					session.put("message", message);
					break;
				case "takahashi":
					message = "高橋(文章B)";
					session.put("message", message);
					break;
				default:
					message = "ようこそ(文章C)";
					session.put("message", message);
					break;
				}

				switch(age){
				case "1":
					age = "18";
					break;
				case "2":
					age = "19";
					break;
				case "3":
					age = "20";
					break;
				case "4":
					age = "21";
					break;
				case "5":
					age = "22";
					break;
				case "6":
					age = "23";
					break;
				case "7":
					age = "24";
					break;
				case "8":
					age = "25";
					break;
				case "9":
					age = "26";
					break;
				case "10":
					age = "27";
					break;
				case "11":
					age = "28";
					break;
				case "12":
					age = "29";
					break;
				case "13":
					age = "30";
					break;
				}

				session.put("name1", getName1());
				session.put("name2", getName2());
				session.put("age", getAge());
				session.put("sex", getSex());

				result = SUCCESS;
				return result;
			}
		}
		return result;
	}

	public String getName1() {
		return name1;
	}

	public void setName1(String name1) {
		this.name1 = name1;
	}

	public String getName2() {
		return name2;
	}

	public void setName2(String name2) {
		this.name2 = name2;
	}

	public String getAge() {
		return age;
	}

	public void setAge(String age) {
		this.age = age;
	}

	public String getSex() {
		return sex;
	}

	public void setSex(String sex) {
		this.sex = sex;
	}

	@Override
	public void setSession(Map<String, Object> session) {
		this.session = session;
	}
}