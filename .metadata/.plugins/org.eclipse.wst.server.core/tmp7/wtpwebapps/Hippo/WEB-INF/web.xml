<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <context-param>
    <param-name>pageLimit</param-name>
    <param-value>50</param-value>
  </context-param>
  <context-param>
    <param-name>mailServer</param-name>
    <param-value>mail.tokyo.lsi-j.co.jp</param-value>
  </context-param>
  <context-param>
    <param-name>mailPort</param-name>
    <param-value>25</param-value>
  </context-param>
  <context-param>
    <param-name>mailAddress</param-name>
    <param-value>hippo@lsi-j.co.jp</param-value>
  </context-param>
  <!-- 追加：インターノウス -->
  <!-- デフォルト工数単価 設定 -->
  <!-- ここから -->
  <context-param>
    <param-name>defaultUnitPrice</param-name>
    <param-value>5000</param-value>
  </context-param>
  <!-- ここまで -->
  <display-name>Hippo</display-name>
  <welcome-file-list>
    <welcome-file>LoginController</welcome-file>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  <resource-ref>
    <description>postgreSQL DataSource Operator Account</description>
    <res-ref-name>pg_operator</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>
  <resource-ref>
    <description>postgreSQL DataSource Maintainer Account</description>
    <res-ref-name>pg_maintainer</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>
  <!-- 追加：インターノウス -->
  <!-- 工数DB 設定 -->
  <!-- ここから -->
  <resource-ref>
    <description>postgreSQL DataSource Working Time DB Account</description>
    <res-ref-name>pg_working_time</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>
  <!-- ここまで -->
  <session-config>
    <session-timeout>30</session-timeout>
  </session-config>
</web-app>